@model PassengerViewModel

@{
    ViewData["Title"] = "| Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-md-center">
    <div class="col-md-4">
        <h3>Are you sure want to delete this?</h3>
        <hr />
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PassengerID" disabled />
            <input type="hidden" asp-for="ExistingPhotoPath" />
            <div class="form-group">
                <label asp-for="PassengerName" class="control-label"></label>
                <input asp-for="PassengerName" class="form-control" disabled />
                <span asp-validation-for="PassengerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassengerEmail" class="control-label"></label>
                <input asp-for="PassengerEmail" class="form-control" disabled />
                <span asp-validation-for="PassengerEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassengerPhone" class="control-label"></label>
                <input asp-for="PassengerPhone" class="form-control" disabled />
                <span asp-validation-for="PassengerPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JourneyDate" class="control-label"></label>
                <input type="date" asp-for="JourneyDate" class="form-control" disabled />
                <span asp-validation-for="JourneyDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainName" class="control-label"></label>
                <select asp-for="TrainID" class="form-control" asp-items="@(new SelectList(ViewBag.Trains, "TrainID", "TrainName"))" disabled>
                    <option value="">Select Train</option>
                </select>
                <span asp-validation-for="TrainID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RouteName" class="control-label"></label>
                <select asp-for="RouteID" class="form-control" asp-items="@(new SelectList(ViewBag.Routes, "RouteID", "RouteName"))" disabled>
                    <option value="">Select Route</option>
                </select>
                <span asp-validation-for="RouteID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassName" class="control-label"></label>
                <select asp-for="ClassID" class="form-control" asp-items="@(new SelectList(ViewBag.Classes, "ClassID", "ClassName"))" disabled>
                    <option value="">Select Class</option>
                </select>
                <span asp-validation-for="ClassID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fee" class="control-label"></label>
                <input asp-for="Fee" class="form-control" disabled />
                <span asp-validation-for="Fee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img src="~/Images/@Model.ExistingPhotoPath" width="90" height="90" asp-append-version="true" />
            </div>
        </form>
        <form asp-action="Delete">
            <input type="hidden" asp-for="PassengerID" />
            <input type="submit" value="Delete" class="btn btn-danger" /><br />
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>